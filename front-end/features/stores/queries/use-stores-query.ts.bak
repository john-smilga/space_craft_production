import { z } from 'zod';
import api from '@/lib/axios';
import { usePaginatedQuery } from '@/lib/react-query/hooks';
import { StoreList, PaginatedStoreListList } from '@/lib/generated/api-schemas';

type StoreType = z.infer<typeof StoreList>;

export function useStoresQuery() {
  return usePaginatedQuery<StoreType>(
    ['stores'],
    async () => {
      const response = await api.get('/stores/');
      return PaginatedStoreListList.parse(response.data);
    }
  );
}

