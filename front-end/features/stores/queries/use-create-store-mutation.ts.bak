import { z } from 'zod';
import api from '@/lib/axios';
import { useAppMutation } from '@/lib/react-query/hooks';
import { StoreCreateRequest, StoreCreate } from '@/lib/generated/api-schemas';

type CreateStoreInput = z.infer<typeof StoreCreateRequest>;
type StoreResponse = z.infer<typeof StoreCreate>;

export function useCreateStoreMutation() {
  return useAppMutation<StoreResponse, CreateStoreInput>(
    async (input) => {
      const validatedInput = StoreCreateRequest.parse(input);
      const response = await api.post('/stores/', validatedInput);
      return StoreCreate.parse(response.data);
    },
    {
      successMessage: 'Store created successfully',
      errorMessage: 'Failed to create store',
      invalidateQueries: [['stores']],
    }
  );
}

