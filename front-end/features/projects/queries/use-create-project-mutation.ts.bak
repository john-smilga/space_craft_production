import { z } from 'zod';
import api from '@/lib/axios';
import { useAppMutation } from '@/lib/react-query/hooks';
import { ProjectCreateRequest, ProjectCreate } from '@/lib/generated/api-schemas';

type CreateProjectInput = z.infer<typeof ProjectCreateRequest>;
type ProjectResponse = z.infer<typeof ProjectCreate>;

export function useCreateProjectMutation() {
  return useAppMutation<ProjectResponse, CreateProjectInput>(
    async (input) => {
      const validatedInput = ProjectCreateRequest.parse(input);
      const response = await api.post('/projects/', validatedInput);
      return ProjectCreate.parse(response.data);
    },
    {
      successMessage: 'Project created successfully',
      errorMessage: 'Failed to create project',
      invalidateQueries: [['projects']],
    }
  );
}

